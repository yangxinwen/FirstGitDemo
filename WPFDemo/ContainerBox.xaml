<UserControl x:Class="WPFDemo.ContainerBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFDemo"
             mc:Ignorable="d" 
             >
    <!--集装箱-->
    <Grid>
        <Border   BorderBrush="#865B55" BorderThickness="0" x:Name="border1" Visibility="Visible">
            <Border.Background>
                <ImageBrush ImageSource="images/box.png"/>
            </Border.Background>
            <TextBlock Text="" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="txt"/>
        </Border>
        <Border    BorderBrush="#865B55" BorderThickness="0" x:Name="border2" Visibility="Collapsed">
            <!--<TextBlock Text="box" HorizontalAlignment="Center" VerticalAlignment="Center" />-->
        </Border>
        <Border   BorderBrush="#865B55" BorderThickness="0" x:Name="border3" Visibility="Collapsed">
            <Path  Data="M50,25 L25,50 M25,25 50,50" Fill="#9594B9" Stretch="Fill" Stroke="#9594B9" StrokeThickness="2" HorizontalAlignment="Right"/>
        </Border>
    </Grid>
</UserControl>
