<UserControl x:Class="WPFDemo.BayViewCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFDemo"
             mc:Ignorable="d" 
             >
    <!--贝视图-->
    <Canvas x:Name="rootCanvas" Height="300" Width="400">
        <Border Height="10" Width="400" Background="#BF0000" VerticalAlignment="Bottom" Canvas.Top="5"/>
        <Border x:Name="minCart" Canvas.Left="100"
                Background="#BF0000" Height="30" Width="50"  HorizontalAlignment="Left">
            <TextBlock Text="R001" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

        <Border 
                 Width="10" Height="295"
            Canvas.Left="5"
            Canvas.Top="5"
            Background="#BF0000" />

        <Border
                    Width="10" Height="295"
            Canvas.Right="5"
            Canvas.Top="5"
            Background="#BF0000" />

        <local:ContainerTruck x:Name="ct1" Width="50" Height="55" Canvas.Bottom="0" Canvas.Left="40"/>

        <local:ContainerTruck  Width="50" Height="55"  Canvas.Bottom="0" Canvas.Right="40"/>
   
    </Canvas>
</UserControl>
