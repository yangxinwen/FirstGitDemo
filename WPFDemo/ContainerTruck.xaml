<UserControl x:Class="WPFDemo.ContainerTruck"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFDemo"
             mc:Ignorable="d" 
             x:Name="uc"
             >
    <!--集卡-->
    <StackPanel>
        <Border Background="#8D8980" Width="40" Height="40" BorderBrush="#865B55" BorderThickness="2">
                <local:ContainerBox HorizontalAlignment="Center" VerticalAlignment="Bottom" x:Name="containerBox"
                                    Height="30" Width="30"
                                    Visibility="Visible"/>
        </Border>
        <Border Background="Black" Width="50" Height="8" BorderBrush="#948525" BorderThickness="2" Margin="0,-2,0,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,-5,0,0" Panel.ZIndex="-10">
            <Ellipse Width="10" Height="15" Fill="Black" Margin="0,0,15,0"/>
            <Ellipse Width="10" Height="15" Fill="Black"/>
        </StackPanel>

    </StackPanel>
</UserControl>
